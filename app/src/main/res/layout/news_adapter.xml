<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:contentPadding="@dimen/size_4"
    card_view:cardElevation="@dimen/size_4"
    card_view:cardCornerRadius="@dimen/size_4"
    card_view:cardBackgroundColor="@color/colorNewsCard"
    android:layout_marginTop="@dimen/size_4"
    android:layout_marginBottom="@dimen/size_4"
    android:layout_marginStart="@dimen/size_8"
    android:layout_marginEnd="@dimen/size_8">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/newsImage"
                    android:paddingBottom="@dimen/size_4"
                    android:paddingStart="@dimen/size_4"
                    android:paddingEnd="@dimen/size_4"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ProgressBar
                    android:id="@+id/imageProgress"
                    android:layout_centerInParent="true"
                    android:layout_width="35dp"
                    android:layout_height="35dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/newsHeadline"
                style="@style/TextAppearance.AppCompat.Menu"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageLayout"
                android:paddingTop="@dimen/size_4"
                android:paddingBottom="@dimen/size_4"
                android:paddingStart="@dimen/size_4"
                android:paddingEnd="@dimen/size_4"
                android:textAlignment="textStart" />

            <TextView
                android:id="@+id/newsDesc"
                android:layout_below="@+id/newsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorDesc"
                android:text="asdsdfsdf"
                style="@style/TextAppearance.AppCompat.Small"
                android:paddingTop="@dimen/size_4"
                android:paddingBottom="@dimen/size_4"
                android:paddingStart="@dimen/size_4"
                android:paddingEnd="@dimen/size_4"
                android:textAlignment="textStart" />

        </RelativeLayout>

        <TextView
            android:id="@+id/date"
            android:textColor="@color/colorDesc"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_below="@+id/mainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_4"
            android:paddingBottom="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4" />

        <TextView
            android:id="@+id/author"
            android:textColor="@color/colorDesc"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_below="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_4"
            android:paddingBottom="@dimen/size_4"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4" />

        <RelativeLayout
            android:layout_below="@+id/author"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/size_8"
            android:paddingStart="@dimen/size_4"
            android:paddingEnd="@dimen/size_4"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shareIcon"
                android:layout_marginTop="@dimen/size_4"
                android:layout_marginBottom="@dimen/size_4"
                android:layout_marginEnd="@dimen/size_8"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_share_black_24dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/readStory"
                android:text="@string/read_story"
                android:textStyle="bold"
                style="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/readStoryColor"
                android:layout_marginTop="@dimen/size_4"
                android:layout_marginBottom="@dimen/size_4"
                android:layout_marginStart="@dimen/size_4"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

